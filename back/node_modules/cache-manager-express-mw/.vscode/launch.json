    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Launch Sample Program",
        "program": "${workspaceRoot}/sample/src/app.js",
        "cwd": "${workspaceRoot}"
      },
      {
        "type": "node",
        "request": "launch",
        "name": "Run Mocha",
        "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
        "cwd": "${workspaceRoot}",
        "args": [
          "${workspaceRoot}/src/test/**/*.js",
          "--no-timeouts"
        ]
      }
    ]
  }
